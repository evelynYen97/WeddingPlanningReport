@model WeddingPlanningReport.Models.Cars

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!-- 顯示婚車的圖片 -->
<div style="text-align: left;">
    <img src="~/Car1/@Model.CarImg" alt="Car Image" class="img-fluid" style="max-width: 300px; height: auto;" />
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <!-- 添加 enctype -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="ShopId" class="control-label"></label>
                <input asp-for="ShopId" class="form-control" />
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarName" class="control-label"></label>
                <input asp-for="CarName" class="form-control" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerCapacity" class="control-label"></label>
                <input asp-for="PassengerCapacity" class="form-control" />
                <span asp-validation-for="PassengerCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalPerDay" class="control-label"></label>
                <input asp-for="RentalPerDay" class="form-control" />
                <span asp-validation-for="RentalPerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarStatus" class="control-label"></label>
                <input asp-for="CarStatus" class="form-control" />
                <span asp-validation-for="CarStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarImg" class="control-label"></label>
                <input type="file" name="file" class="form-control" /> 
                <span asp-validation-for="CarImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail" class="control-label"></label>
                <input asp-for="CarDetail" class="form-control" />
                <span asp-validation-for="CarDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
