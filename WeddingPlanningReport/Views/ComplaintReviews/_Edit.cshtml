@model WeddingPlanningReport.Models.ComplaintReview

<h4>審核舉報管理</h4>
<hr />
<form asp-action="Edit" method="post">
    <div class="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ComplaintRecordId" />
        <input type="hidden" asp-for="ReporterMemberId" />
        <input type="hidden" asp-for="RespondentMemberId" />
        <input type="hidden" asp-for="ReportTime" />
        <input type="hidden" asp-for="ReviewerId" />
        <input type="hidden" asp-for="ReviewerName" />
        <input type="hidden" asp-for="ReviewNotes" />


        <div class="form-group">
            <label asp-for="SharedRecordId" class="control-label"></label>
            <input asp-for="SharedRecordId" class="form-control" readonly="readonly" />
            <span asp-validation-for="SharedRecordId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReportDetail" class="control-label"></label>
            <input asp-for="ReportDetail" class="form-control" readonly="readonly" />
            <span asp-validation-for="ReportDetail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReviewStatus" class="control-label"></label>
            <select asp-for="ReviewStatus" class="form-control">
                <option value="待處理">待處理</option>
                <option value="已審核">已審核</option>
            </select>
            <span asp-validation-for="ReviewStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReviewTime" class="control-label"></label>
            <input asp-for="ReviewTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="ReviewTime" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="ReviewResultDescription" class="control-label"></label>
            <input asp-for="ReviewResultDescription" class="form-control" />
            <span asp-validation-for="ReviewResultDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

