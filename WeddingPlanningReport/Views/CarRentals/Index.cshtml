<div class="container">
    <h1>租車明細管理介面</h1>

    <div class="card">
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fa-solid fa-user-plus mb-3"></i> 新增明細
                </a>
            </p>
            <!-- 搜尋欄與下拉選單 -->
            <div class="mb-3">
                <select id="searchColumn" class="form-control mb-2">
                    <option value="0">租車ID</option>
                    <option value="1">會員ID</option>
                    <option value="2">客戶姓名</option>
                    <option value="3">客戶電話</option>
                    <option value="4">租賃日期</option>
                    <option value="5">歸還日期</option>
                    <option value="6">總租金</option>
                    <option value="7">車單狀態</option>
                </select>
                <input type="text" id="searchValue" placeholder="輸入搜尋條件" class="form-control mb-2" />
                <button id="searchButton" class="btn btn-primary">搜尋</button>
            </div>
            <table class="table table-striped table-hover" id="rentalTable">
                <thead>
                    <tr>
                        <th>租車ID</th>
                        <th>會員ID</th>
                        <th>客戶姓名</th>
                        <th>客戶電話</th>
                        <th>租賃日期</th>
                        <th>歸還日期</th>
                        <th>總租金</th>
                        <th>車單狀態</th>
                        <th>Actions</th> <!-- 新增一個表頭用於動作按鈕 -->
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#rentalTable').DataTable({
                ajax: {
                    type: "GET",
                    url: "/CarRentals/IndexJson",
                    dataSrc: function (json) {
                        return json;
                    },
                },
                columns: [
                    { "data": "rentalId", "width": "10%" },
                    { "data": "memberId", "width": "10%" },
                    { "data": "clientName", "width": "10%" },
                    { "data": "clientPhone", "width": "10%" },
                    { "data": "leaseDate", "width": "10%" },
                    { "data": "returnDate", "width": "10%" },
                    { "data": "rentalTotal", "width": "10%" },
                    { "data": "rentalStatus",
                        "render": function (data, type, row) {
                            let badgeClass = "";
                            switch (data) {
                                case "已完成":
                                    badgeClass = "bg-success";
                                    break;
                                case "進行中":
                                    badgeClass = "bg-danger";
                                    break;
                                case "已取消交易":
                                    badgeClass = "bg-secondary";
                                    break;
                            }
                            return `<span class="badge ${badgeClass}">${data}</span>`;
                        },
                        "width": "10%" },
                    {
                        // 動作按鈕列
                        "data": null,
                        "render": function (data, type, row) {
                            return `
                                        <a href="/CarRentals/Edit/${row.rentalId}" class="btn btn-info btn-margin">Edit</a>
                                        <a href="/CarRentals/Details/${row.rentalId}" class="btn btn-secondary btn-margin">Details</a>
                                        <a href="/CarRentals/Delete/${row.rentalId}" class="btn btn-danger btn-margin">Delete</a>
                                    `;
                        },
                        "width": "20%"
                    }
                ],
                fixedHeader: {},
                language: {}
            });

            // 搜尋按鈕點擊事件
            $('#searchButton').on('click', function () {
                var columnToSearch = $('#searchColumn').val(); // 獲取選擇的欄位索引
                var searchValue = $('#searchValue').val(); // 獲取搜尋條件

                // 根據選擇的欄位進行搜尋
                table.column(columnToSearch).search(searchValue).draw();
            });
        });
    </script>
}
