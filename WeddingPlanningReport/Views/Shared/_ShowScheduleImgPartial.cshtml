@model Schedule
@inject WeddingPlanningContext _context

@{
    Schedule schange = await _context.Schedules.FindAsync(Model.ScheduleId);
    if (schange != null && schange.ScheduleStageImg1 != null)
    {
        <img class="mt-4" src="@Url.Content($"~/scheduleImg/{Model.ScheduleStageImg1}")" width="100%" style="width:320px;height:240px border-radius:5px;border:1px solid #bbb9b9;" title="@Html.DisplayFor(model=>model.ScheduleStageName)" />
    }
    else
    {
        <img src="@Url.Content("~/eventimg//noimage.png")" title="尚無圖片" style="width:320px;height:240px" />
    }

}