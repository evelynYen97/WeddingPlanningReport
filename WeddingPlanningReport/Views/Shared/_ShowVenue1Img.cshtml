@model Event
@inject WeddingPlanningContext _context

@{
    Event eventchange = await _context.Events.FindAsync(Model.EventId);
    if (eventchange != null && eventchange.EventVenueImg1 != null)
    {
        <img class="mt-4" src="@Url.Content($"~/eventimg/{Model.EventVenueImg1}")" width="100%" style="width:320px;height:240px border-radius:5px;border:1px solid #bbb9b9;" title="@Html.DisplayFor(model=>model.EventLocation)" />
    }
    else
    {
        <img src="@Url.Content("~/eventimg//noimage.png")" title="尚無圖片" style="width:320px;height:240px" />
    }

}