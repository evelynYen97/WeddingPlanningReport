@model IEnumerable<WeddingPlanningReport.Models.ImgUsing>
@inject WeddingPlanningContext _content
@{
    ViewData["Title"] = "IndexMore";
}

@section Styles {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/css/btn18settype.min.css" rel="stylesheet" />
    <link href="~/css/cantablestyle.css" rel="stylesheet" />
    <style>
        .modal-body {
            padding-top: 0
        }

        .detail-btn {
            background-color: #9271AC
        }

        .table-responsive {
            width: 1050px;
            margin: auto;
        }
        /* 添加懸停效果 */
        #ImageUseTable tr:hover {
            background-color: #A6FFFF !important; /* 懸停時高亮顏色 */
            cursor: pointer; /* 鼠標移到行上時顯示指針 */
        }
    </style>
}

<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>

</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>
                    <!-- header start  -->
                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb py-1 mb-0 mt-2">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><a asp-area="" asp-controller="EditingImgFiles" asp-action="Index">圖層素材管理</a></li>
                            </ol>
                            <div class="row d-block">
                                <h5 class="currentPage">素材詳細資訊</h5>
                            </div>
                        </nav>

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">登入者姓名</span>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user me-2"></i>
                                            <span class="align-middle">My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="login.html">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                    <!-- header end  -->
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="container-xxl flex-grow-1 container-p-y">
                    <!--  Table start -->
                    <div class="card">
                        <div class="table-responsive text-nowrap position-relative">
                            <table class="table" id="ImageUseTable">
                                <thead class="table-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EditingImgFileId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MemberMaterialId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MaterialId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImgX)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImgY)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImgW)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImgH)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsDelete)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var imgName = _content.Materials
                                        .Where(x => x.MaterialId== item.MaterialId) // 假設這是關聯字段
                                        .Select(x => x.ImageName)
                                        .FirstOrDefault();
                                        if (imgName == null)
                                        {
                                            imgName = "noimage.jpg";
                                        }

                                        var MemberimgName = _content.MemberMaterials
                                        .Where(x => x.MemberMaterialId == item.MemberMaterialId) // 假設這是關聯字段
                                        .Select(x => x.MemberImgName)
                                        .FirstOrDefault();
                                        if (MemberimgName==null)
                                        {
                                            MemberimgName = "noimage.jpg";
                                        }
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EditingImgFileId)
                                            </td>
                                            <td>

                                                @* @Html.DisplayFor(modelItem => item.MemberMaterialId) *@
                                                <img src="@Url.Content("~/圖片與圖層/圖片/會員提供圖/" + MemberimgName)" alt="Image" width="80px" height="auto" />
                                            </td>
                                            <td>
                                                @* @Html.DisplayFor(modelItem => item.MaterialId) *@
                                                <img src="@Url.Content("~/圖片與圖層/圖片/網站/" + imgName)" alt="Image" width="80px" height="auto"/>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImgX)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImgY)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImgW)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImgH)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsDelete)
                                            </td>
                                            <td>
                                                <a asp-action="Delete" asp-route-id="@item.ImgUsingId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a asp-area="" asp-controller="EditingImgFiles" asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                    <!-- Table end -->
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#ImageUseTable").dataTable({
                fixedHeader: {//確保表頭固定，但搜尋欄位能隨滾動條移動
                    header: true
                },
                scrollCollapse: true, // 內容縮放時保持滾動條
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.1.5/i18n/zh-HANT.json',
                },
                stripeClasses: ['odd-row', 'even-row']
            });
        });
    </script>
}










