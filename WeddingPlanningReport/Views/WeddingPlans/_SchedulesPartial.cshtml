                    @Html.DisplayFor(modelItem => sitem.ScheduleTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sitem.ScheduleStageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sitem.ScheduleStageNotes)
                </td>
                <td>
