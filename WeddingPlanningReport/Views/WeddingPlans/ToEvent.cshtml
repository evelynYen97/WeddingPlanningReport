                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventTime)
                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventLocation)
                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventNotes)
                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventLocationImg)
                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventVenueImg1)
                                            </td>
                                            <td>
                                                    @Html.DisplayFor(modelItem => item.EventVenueImg2)
                                            </td>
                                            <td>
                                                <btn class="btn btn-primary btn-schedules"  data-id="@item.EventId">查看活動排程</btn>
                                            </td>
                                        </tr>
                                        }
                                </tbody>
                               
