                    //         e.preventDefault();
                    //         $.ajax({
                    //             url: $(this).attr('action'),
                    //             type: 'POST',
                    //             data: $(this).serialize(),
                    //             success: function (response) {
                    //                 if (response.success) {
                    //                     alert("活動項目更新成功");
                    //                     $('#myModal').modal('hide');
                    //                     window.location.href = '@Url.Action("Index", "Events")?id=' + id;
                    //                 }
                    //                 else {
                    //                     alert("請確實填寫必填欄位");
                    //                 }
                    //             }
                    //         })
                    //     })

                    // });
                });

                //delete start
                $('#myTable').on('click', '.delete-btn', function () {
                    var id = $(this).data('id');
                    $('.modal-body').load(`/WeddingPlans/Delete/${id} #Deleteview`, function () {
                        $('#myModalLabel').text("刪除婚禮計劃書");
                        $('#myModal').modal('show');
                        $(document).off('submit', '#formDelete').on('submit', '#formDelete', function (e) {
                            e.preventDefault();
                            $.ajax({
                                url: $(this).attr('action'),
                                type: 'POST',
                                data: $(this).serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        alert("婚禮計劃書刪除成功");
                                        $('#myModal').modal('hide');
                                        location.reload();
                                    }
                                }
                            })
                        })
                    });
                });
                //delete end
                //To event start
                $('#myTable').on('click', '.detail-btn', function (){
                    var id = $(this).data('id');
                    window.location.href = '@Url.Action("Index", "Events")?id=' + id;
                //To event end
            });
        });
    </script>
