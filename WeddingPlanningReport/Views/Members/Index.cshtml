@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.js"></script>
    @* <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script> *@
    <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.js"></script>

    <script>
        $(document).ready(function () {
            $("table").dataTable({
                ajax: {
                    type: "GET",
                    url: "/Members/IndexJson",
                    dataSrc: function (json) {
                        return json;
                    },
                },
                columns: [
                    { "data": "memberId", "width": "10%" },
                    { "data": "memberName", "width": "10%" },
                    { "data": "sex", "width": "10%" },
                    { "data": "email", "width": "10%" },
                    { "data": "password", "width": "10%" },
                    { "data": "weddingStatus", "width": "10%" },
                    { "data": "memberGrade", "width": "10%" },
                    { "data": "memberStatus", "width": "10%" },
                    {
                        "data": null, // 動態生成操作列的數據
                        "width": "10%",
                        "render": function (data, type, row) {
                            return `
                                                    <div class="dropdown">
                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                            <i class="bx bx-dots-vertical-rounded"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <button class="dropdown-item"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#editModal"
                                                                                    onclick="loadModalContent('/Members/Edit/${row.memberId}', '#editModal')">
                                                                <i class="bx bx-edit-alt me-1"></i> 編輯
                                                            </button>
                                                            <button class="dropdown-item"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#detailsModal"
                                                                                    onclick="loadModalContent('/Members/Details/${row.memberId}', '#detailsModal')">
                                                                <i class="bx bx-info-circle me-1"></i> 詳細資訊
                                                            </button>
                                                        </div>
                                                    </div>
                                                `;
                        }
                    },
                ],
                fixedHeader: {
                    header: true
                },
                language: {
                    url: "//cdn.datatables.net/plug-ins/2.1.6/i18n/zh-HANT.json",
                },
            });
        });

        function loadModalContent(url, modalId) {
            $.get(url, function (data) {
                $(`${modalId} .modal-body`).html(data);
            }).fail(function () {
                console.error('Failed to load modal content.');
            });
        }



    </script>
}

