                    <!-- 新增維護項目 -->
                    <div class="card">
                        <h5 class="pt-2">新增維護項目</h5>
                        <div id="dash" class="border-top border-bottom"></div>
                        <div id="form-outside">
                        <form id="maintenance-form" onsubmit="return false;">
                            <label>
                                維護類別:
                                <input type="text" name="category" required>
                            </label>
                            <label>
                                描述:
                                <input type="text" name="description" required>
                            </label>
                            <label>
                                開始時間:
                                <input type="datetime-local" name="startTime" required>
                            </label>
                            <label>
                                結束時間:
                                <input type="datetime-local" name="endTime" required>
                            </label>
                            <label>
                                負責人 ID:
                                <input type="number" name="personInCharge" required>
                            </label>
                            <label>
                                狀態:
                                <select name="status">
                                    <option value="進行中">進行中</option>
                                    <option value="已完成">已完成</option>
                                    <option value="排程中">排程中</option>
                                </select>
                            </label>
                            <button type="button" onclick="addNewRow()" id="AddNewBtn" class="btn button-18">
