            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    @section Scripts
    {
        <script>
            // 初始化維護數據陣列
            let maintenanceData = JSON.parse(localStorage.getItem('maintenanceData')) || [];

            // 頁面加載時渲染表格
            window.onload = renderTable;

            // 新增維護項目
            function addNewRow() {
                const form = document.querySelector('#maintenance-form');
                const formData = new FormData(form);
                const newData = {
                    category: formData.get('category'),
                    description: formData.get('description'),
                    startTime: formData.get('startTime'),
                    endTime: formData.get('endTime'),
                    personInCharge: formData.get('personInCharge'),
                    status: formData.get('status')
                };
                maintenanceData.push(newData);
                localStorage.setItem('maintenanceData', JSON.stringify(maintenanceData)); // 儲存到 Local Storage
                renderTable();
                form.reset(); // 重置表單
            }

            // 渲染維護表格
            function renderTable() {
                const tableBody = document.querySelector('.table tbody');
                tableBody.innerHTML = ''; // 清空表格
                maintenanceData.forEach((item, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                                    <td>${item.category}</td>
                                    <td>${item.description}</td>
                                    <td>${item.startTime}</td>
                                    <td>${item.endTime}</td>
                                    <td>${item.personInCharge}</td>
                                    <td>${item.status}</td>
                                    <td>
                                        <button onclick="deleteRow(${index})" class="btn button-18">刪除</button>
                                    </td>
                                `;
                    tableBody.appendChild(row);
                });
            }

            // 刪除維護項目
            function deleteRow(index) {
                maintenanceData.splice(index, 1);
                localStorage.setItem('maintenanceData', JSON.stringify(maintenanceData)); // 更新 Local Storage
                renderTable();
            }
        </script>
    }
</body>
</html>
