@section Styles
{
    <link href="~/css/btn18settype.css" rel="stylesheet" />
    <style>
        /* 表格樣式 */
        .table th, .table td {
            vertical-align: middle;
        }

        /* 表單樣式 */
        #maintenance-form {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin: 20px 0;
            padding: 50px;
        }

        .button-18 {
            background-color: #8B8095;
            color: #ffffff;
        }

            #maintenance-form label {
                font-weight: bold;
                margin-bottom: 5px;
            }

            #maintenance-form input,
            #maintenance-form select {
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                transition: border-color 0.3s;
            }

            #maintenance-form input:focus,
            #maintenance-form select:focus {
                border-color: #007bff;
                outline: none;
            }

            #maintenance-form button {
                padding: 10px 15px;
            background-color: #8B8095;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            #maintenance-form button:hover {
                background-color: #B1AAB8;
            }

        /* 卡片樣式 */
        .card {
            padding: 20px;
            margin-top: 20px;
        }

        /* 標題樣式 */
        h5 {
            margin-bottom: 20px;
            margin-left: 20px;
            font-size: 1.3rem;
        }

        #AddNewBtn{
            margin-left:70%;
        }

        #form-outside{
            padding-left:15%
        }
    </style>
}

@{
    ViewData["Title"] = "Home";
}
