        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
</body>
</html>

<script>
   
     document.getElementById('CakeImgUpload').addEventListener('change', function (event) {
        var reader = new FileReader();
        reader.onload = function (e) {
            var base64 = e.target.result;
            document.getElementById('CakeImgBase64').value = base64;
            document.getElementById('CakeImgPreview').src = base64;
        }
        reader.readAsDataURL(event.target.files[0]);
    });
    

   
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

       
    }
}
