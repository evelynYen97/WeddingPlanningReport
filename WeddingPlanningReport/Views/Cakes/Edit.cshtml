                                <h5 class="currentPage">首頁</h5>
                            </div>
                        </nav>

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">登入者姓名</span>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user me-2"></i>
                                            <span class="align-middle">My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="login.html">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                    <!-- header end  -->
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="container-xxl flex-grow-1 container-p-y">

                    <!--  Table start -->
                    <div class="card">
                        <h5 class="card-header bg-light bg-gradient "></h5>
                        <div class="table-responsive text-nowrap">
                            <table class="table table-hover ">
                                <h1>Edit</h1>

                                <h4>Cake</h4>
                                <hr />
                                <div class="row">
                                    <div class="col-md-4">
                                        <form asp-action="Edit"  enctype="multipart/form-data">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="CakeId" />
                                            <div class="form-group">
                                                <label asp-for="ShopId" class="control-label"></label>
                                                <input asp-for="ShopId" class="form-control" />
                                                <span asp-validation-for="ShopId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeStyles" class="control-label"></label>
                                                <input asp-for="CakeStyles" class="form-control" />
                                                <span asp-validation-for="CakeStyles" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeName" class="control-label"></label>
                                                <input asp-for="CakeName" class="form-control" />
                                                <span asp-validation-for="CakeName" class="text-danger"></span>
                                            </div>

                                            <div class="form-group"> @*新增IsDelete欄位*@
                                                <label asp-for="IsDelete" class="control-label"></label>
                                                <input asp-for="IsDelete" class="form-control" type="text"/>
                                                <span asp-validation-for="IsDelete" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <label for="CakeImg">更新圖片</label>
                                                <input type="file" id="CakeImgUpload" />
                                                <img id="CakeImgPreview" src="@Url.Content($"~/cakesImg/{Model.CakeImg}")" alt="Cake Image" style="max-width: 200px; margin-top: 10px;" />
                                                <input type="hidden" name="CakeImgBase64" id="CakeImgBase64" />
                                            </div>                                                     

                                            <div class="form-group">
                                                <label asp-for="CakeDescription" class="control-label"></label>
                                                <input asp-for="CakeDescription" class="form-control" />
                                                <span asp-validation-for="CakeDescription" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakePrice" class="control-label"></label>
                                                <input asp-for="CakePrice" class="form-control" />
                                                <span asp-validation-for="CakePrice" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeStatus" class="control-label"></label>
                                                <input asp-for="CakeStatus" class="form-control" />
                                                <span asp-validation-for="CakeStatus" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeStock" class="control-label"></label>
                                                <input asp-for="CakeStock" class="form-control" />
                                                <span asp-validation-for="CakeStock" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeAnnotation" class="control-label"></label>
                                                <input asp-for="CakeAnnotation" class="form-control" />
                                                <span asp-validation-for="CakeAnnotation" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="AllergenInfo" class="control-label"></label>
                                                <input asp-for="AllergenInfo" class="form-control" />
                                                <span asp-validation-for="AllergenInfo" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="CakeContent" class="control-label"></label>
                                                <input asp-for="CakeContent" class="form-control" />
                                                <span asp-validation-for="CakeContent" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div>
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </table>
                        </div>
                    </div>
