@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>

   <script>
    $(document).ready(function(){
        $('table').DataTable({
            ajax: {
                type: 'GET',
                url: "/Shops/IndexJson",
                dataSrc: function (json) { return json; }
            },
            columns: [
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return '<a href="/Shops/Details/' + row.shopId + '" class="btn btn-info btn-sm">詳情</a>';
                    }
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return '<a href="/Shops/Edit/' + row.shopId + '" class="btn btn-primary btn-sm">編輯</a>';
                    }
                },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return '<a href="/Shops/Delete/' + row.shopId + '" class="btn btn-danger btn-sm">刪除</a>';
                    }
                },
                { "data": "shopId", "width": "10%" },

                    {
                        "data": "isDelete",
                        "width": "10%",
                        "render": function (data, type, row) {
                            if (data) {
                                return '已刪除';
                            } else {
                                return '未刪除';
                            }
                        }
                    },

                    {
                        "data": "shopStatus",
                        "width": "10%",
                        "render": function (data, type, row) {
                            if (data === 1) {
                                return '上架';
                            } else if (data === 2) {
                                return '未上架';
                            } else if (data === 3) {
                                return '待主管確認';
                            }
                        }
                    },

                { "data": "shopName", "width": "10%" },
                {
                    "data": "shopLogo",
                    "width": "10%",
                    "render": function (data, type, row) {
                        if (data) {
                            return '<img src="/ShopLogo/' + data + '" alt="Shop Logo" style="width: 50px; height: 50px;" />';
                        } else {
                            return 'No Image';
                        }
                    }
                },
                {
                    "data": "shopImg",
                    "width": "10%",
                    "render": function (data, type, row) {
                        if (data) {
                            return '<img src="/ShopImg/' + data + '" alt="Shop Img" style="width: 50px; height: 50px;" />';
                        } else {
                            return 'No Image';
                        }
                    }
                },
                { "data": "shopSort", "width": "10%" },
                { "data": "contactPerson", "width": "10%" },
                { "data": "contactPhone", "width": "10%" },
                { "data": "shopRating", "width": "10%" },
                
                { "data": "payment", "width": "10%" },
                { "data": "serviceArea", "width": "10%" },
                   
            ],
            fixedHeader: { header: true },
            language: { url: '//cdn.datatables.net/plug-ins/2.1.5/i18n/zh-HANT.json' }
        });
    });
</script>
}
