@model WeddingPlanningReport.Models.Shop
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>

</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>
                    <!-- header start  -->
                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb py-1 mb-0 mt-2">
                                <li class="breadcrumb-item"><a href="./Home.html">Home</a></li>
                                <li class="breadcrumb-item"><a href="">上層頁面名稱(若無可刪)</a></li>
                                <li class="breadcrumb-item active" aria-current="page">首頁</li>
                            </ol>
                            <div class="row d-block">
                                <h5 class="currentPage">首頁</h5>
                            </div>
                        </nav>

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="../assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">登入者姓名</span>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user me-2"></i>
                                            <span class="align-middle">My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="login.html">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                    <!-- header end  -->
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="container-xxl flex-grow-1 container-p-y">

                    <!--  Table start -->
                    <div class="card">
                        <h5 class="card-header bg-light bg-gradient ">表格標題</h5>
                        <div class="table-responsive text-nowrap">

                            <h1>Create</h1>

                            <h4>Shop</h4>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="ShopName" class="control-label"></label>
                                            <input asp-for="ShopName" class="form-control" />
                                            <span asp-validation-for="ShopName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" style="display:none" >@*新增IsDelete 先放起來並且預設為false*@
                                            <label asp-for="IsDelete" class="control-label"></label>
                                            <input asp-for="IsDelete" class="form-control" type="text" value="false" />
                                            <span asp-validation-for="IsDelete" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ShopSort" class="control-label"></label>
                                            <input asp-for="ShopSort" class="form-control" />
                                            <span asp-validation-for="ShopSort" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ContactPerson" class="control-label"></label>
                                            <input asp-for="ContactPerson" class="form-control" />
                                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ContactPhone" class="control-label"></label>
                                            <input asp-for="ContactPhone" class="form-control" />
                                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ShopRating" class="control-label"></label>
                                            <input asp-for="ShopRating" class="form-control" />
                                            <span asp-validation-for="ShopRating" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="shopImgInput">上傳商店圖片 (選擇性，僅支援 JPG 或 PNG):</label>
                                            <input type="file" id="shopImgInput" class="form-control" />
                                            <input type="hidden" name="ShopImgBase64" id="ShopImgBase64" />
                                            <img id="shopImgPreview" src="#" alt="Shop Image Preview" style="max-width: 200px; margin-top: 10px; display: none;" />
                                        </div>

                                        <div class="form-group">
                                            <label for="shopLogoInput">上傳商店標誌 (選擇性，僅支援 JPG 或 PNG):</label>
                                            <input type="file" id="shopLogoInput" class="form-control" />
                                            <input type="hidden" name="ShopLogoBase64" id="ShopLogoBase64" />
                                            <img id="shopLogoPreview" src="#" alt="Shop Logo Preview" style="max-width: 200px; margin-top: 10px; display: none;" />
                                        </div>


                                        <div class="form-group">
                                            <label asp-for="Payment" class="control-label"></label>
                                            <input asp-for="Payment" class="form-control" />
                                            <span asp-validation-for="Payment" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ServiceArea" class="control-label"></label>
                                            <input asp-for="ServiceArea" class="form-control" />
                                            <span asp-validation-for="ServiceArea" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ShopStatus" class="control-label"></label>
                                            <input asp-for="ShopStatus" class="form-control" />
                                            <span asp-validation-for="ShopStatus" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>


                        </div>
                    </div>
                    <!-- Table end -->
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
               document.getElementById('shopImgInput').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.getElementById('shopImgPreview');
                img.src = e.target.result;
                img.style.display = 'block'; // 顯示圖片預覽
                document.getElementById('ShopImgBase64').value = e.target.result; // 設置 Base64 字串
            }
            if (event.target.files.length > 0) {
                reader.readAsDataURL(event.target.files[0]);
            }
        });

        document.getElementById('shopLogoInput').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.getElementById('shopLogoPreview');
                img.src = e.target.result;
                img.style.display = 'block'; // 顯示圖片預覽
                document.getElementById('ShopLogoBase64').value = e.target.result; // 設置 Base64 字串
            }
            if (event.target.files.length > 0) {
                reader.readAsDataURL(event.target.files[0]);
            }
        });
    </script>
}
