                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="~/assets/img/avatars/1.png" alt class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">登入者姓名</span>
                                                    <small class="text-muted">Admin</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-user me-2"></i>
                                            <span class="align-middle">My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bx bx-cog me-2"></i>
                                            <span class="align-middle">Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="login.html">
                                            <i class="bx bx-power-off me-2"></i>
                                            <span class="align-middle">Log Out</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                    <!-- header end  -->
                </nav>

                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="container-xxl flex-grow-1 container-p-y">

                    <!--  Table start -->
                    <div class="card">
                        <h4 class="card-header bg-light bg-gradient ">新增 會員預算項目</h4>
                        <div id="dash" class="border-top border-bottom"></div>
                            @* 替換start *@
                            <div class="row">
                                <div class="col-md-4" id="Insidechange">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="MemberId" class="control-label"></label>
                                            <select asp-for="MemberId"  class="form-control" asp-items="@ViewBag.memberId"></select>
                                            <span asp-validation-for="MemberId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="BudgetItemDetail" class="control-label"></label>
                                            <input asp-for="BudgetItemDetail" class="form-control" />
                                            <span asp-validation-for="BudgetItemDetail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                        <label asp-for="BudgetItemPrice" class="control-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                         <input asp-for="BudgetItemPrice" class="form-control" oninput="calculateSubtotal()"  />
                                        </div>
                                            <span asp-validation-for="BudgetItemPrice" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="BudgetItemAmount" class="control-label"></label>
                                        <input asp-for="BudgetItemAmount" class="form-control" oninput="calculateSubtotal()" />
                                            <span asp-validation-for="BudgetItemAmount" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="BudgetItemSubtotal" class="control-label"></label>
                                            <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="BudgetItemSubtotal" class="form-control" />
                                            </div>
                                            <span asp-validation-for="BudgetItemSubtotal" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="BudgetItemSort" class="control-label"></label>
                                            <input asp-for="BudgetItemSort" class="form-control" />
                                            <span asp-validation-for="BudgetItemSort" class="text-danger"></span>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                    <div>
                                        <a asp-action="Index">返回</a>
                                    </div>
                                </div>
                                
                            </div>

                            
                            @* 替換end *@
                       
                    </div>
                    <!-- Table end -->
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
</body>


@section Scripts {
    <script>
         function calculateSubtotal() {
            const price = parseFloat(document.querySelector('[name="BudgetItemPrice"]').value) || 0;
            const amount = parseFloat(document.querySelector('[name="BudgetItemAmount"]').value) || 0;
            const subtotal = price * amount;
            document.querySelector('[name="BudgetItemSubtotal"]').value = subtotal;
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
