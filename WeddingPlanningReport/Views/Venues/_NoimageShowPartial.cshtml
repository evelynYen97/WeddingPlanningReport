@model Venue
@inject WeddingPlanningContext _context

@{
    Venue venuechange = await _context.Venues.FindAsync(Model.VenueId);
    if (venuechange != null && venuechange.VenueImg != null)
    {
        <img src="@Url.Content("~/Ven1/" + Model.VenueImg)" width="360px" height="270px" />
    }
    else
    {
        <img src="@Url.Content("~/Ven1/noimage.jpg")" title="尚無圖片" style="width:320px;height:240px" />
    }
}
