@section Scripts{
    <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/calendarjavascript.min.js"></script>
    <script>
        // Profit Report Line Chart
        // --------------------------------------------------------------------
        const profileReportChartEl = document.querySelector('#profileReportCharts'),
            profileReportChartConfig = {
                chart: {
                    height: 80,
                    // width: 175,
                    type: 'line',
                    toolbar: {
                        show: false
                    },
                    dropShadow: {
                        enabled: true,
                        top: 10,
                        left: 5,
                        blur: 3,
                        color: config.colors.warning,
                        opacity: 0.15
                    },
                    sparkline: {
                        enabled: true
                    }
                },
                grid: {
                    show: false,
                    padding: {
                        right: 8
                    }
                },
                colors: [config.colors.warning],
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    width: 5,
                    curve: 'smooth'
                },
                series: [
                    {
                        data: [@Model.lastTwoMonthMember, @Model.lastMonthMember, @Model.thisMonthMember]
                    }
                ],
                xaxis: {
                    show: true,
                    categories: [`${@ViewBag.TwoMonthsAgo}月`, `${@ViewBag.PreviousMonth}月`, `${@ViewBag.CurrentMonth}月`],
                    lines: {
                        show: false
                    },
                    labels: {
                        show: true
                    },
                    axisBorder: {
                        show: false
                    }
                },
                yaxis: {
                    show: false
                }
            };
        if (typeof profileReportChartEl !== undefined && profileReportChartEl !== null) {
            const profileReportChart = new ApexCharts(profileReportChartEl, profileReportChartConfig);
            profileReportChart.render();
        }

        //Prefer Chart--------------------------------------
        var preferChart = {
            series: [@Model.preferC, @Model.preferW],
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: ['中式', '西式'],
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };

        var chart = new ApexCharts(document.querySelector("#preferChart"), preferChart);
        chart.render();

            // Order Statistics Chart
            // --------------------------------------------------------------------
            const chartOrderStatistics = document.querySelector('#OrderStatisticsChart'),
                orderChartConfig = {
                    chart: {
                        height: 165,
                        width: 130,
                        type: 'donut'
                    },
                    labels: ['venue', 'cars', 'cakes', 'dishes'],
                    series: [@Model.VenueMonthOrdersTotal, @Model.CarMonthOrdersTotal, @Model.CakeMonthOrdersTotal, @Model.DishesMonthOrdersTotal],
                colors: ['#696cff', '#8592a3', '#03c3ec', '#71dd37'],
                    stroke: {
                        width: 5,
                        colors:['#fff'],
                    },
                    dataLabels: {
                        enabled: false,
                        formatter: function (val, opt) {
                            return parseInt(val) + '%';
                        }
                    },
                    legend: {
                        show: false
                    },
                    grid: {
                        padding: {
                            top: 0,
                            bottom: 0,
                            right: 15
                        }
                    },
                    plotOptions: {
                        pie: {
                            donut: {
                                size: '75%',
                                labels: {
                                    show: true,
                                    value: {
                                        fontSize: '1.5rem',
                                        fontFamily: 'Public Sans',
                                         color: '#566a7f',
                                        offsetY: -15,
                                        formatter: function (val) {
                                        return ((parseInt(val) / @Model.OrdersTotal)*100).toFixed(2) + '%';
                                        }
                                    },
                                    name: {
                                        offsetY: 20,
                                        fontFamily: 'Public Sans'
                                    },
                                    total: {
                                        show: true,
                                        fontSize: '0.8125rem',
                                    }
                                }
                            }
                        }
                    }
                };
            if (typeof chartOrderStatistics !== undefined && chartOrderStatistics !== null) {
                const statisticsChart = new ApexCharts(chartOrderStatistics, orderChartConfig);
                statisticsChart.render();
            }



        // Mail---------------------------------------------------------------------

        // 將 loadModalContent 定義在全局範圍中
        function loadModalContent(url, modalId) {
            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    $(`${modalId} .modal-body`).html(data);
                    $(modalId).modal('show');
                },
                error: function () {
                    alert('無法載入回覆表單，請稍後再試。');
                }
            });
        }

        $(document).ready(function () {
            // 綁定表單提交事件處理
            $(document).on('submit', '#replyForm', function (e) {
                e.preventDefault(); // 防止表單直接提交

                var form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            // 使用 SweetAlert
                            Swal.fire({
                                position: "top", 
                                icon: "success",
                                title: "回覆成功！",
                                showConfirmButton: false,
                                timer: 1500
                            });

                            $('#replyModal').modal('hide');

                            // 清空之前的錯誤訊息
                            $('span[data-valmsg-for="ReplyContent"]').text('');

                            // 更新郵件數量
                            $('#unrepliedCount').text(response.unrepliedCount);
                            $('#repliedCount').text(response.repliedCount);


                            // 重新加載未回覆郵件的列表
                            $.ajax({
                                url: '@Url.Action("GetUnrepliedMailsPartial", "Home")',
                                type: 'GET',
                                success: function (data) {
                                    $('.custom-table table').html(data); // 更新表格
                                },
                                error: function () {
                                    alert('無法更新郵件列表，請稍後再試。');
                                }
                            });
                        } else {
                            $('span[data-valmsg-for="ReplyContent"]').text(response.message);
                            
                        }
                    },
                    error: function () {                       
                        alert('郵件回覆失敗，請稍後再試。');
                    }
                });
            });

            // 顯示未回覆郵件
            $('#showUnreplied').click(function () {
                $.ajax({
                    url: '@Url.Action("GetUnrepliedMailsPartial", "Home")',
                    type: 'GET',
                    success: function (data) {
                        $('.custom-table table').html(data); // 更新表格內容
                    },
                    error: function () {
                        alert('無法加載未回覆郵件，請稍後再試。');
                    }
                });
                // 切換按鈕顏色
                $('#showUnreplied').removeClass('btn-outline-secondary').addClass('btn-primary active');
                $('#showReplied').removeClass('btn-primary active').addClass('btn-outline-secondary');
            });

            // 顯示已回覆郵件
            $('#showReplied').click(function () {
                $.ajax({
                    url: '@Url.Action("GetRepliedMailsPartial", "Home")',
                    type: 'GET',
                    success: function (data) {
                        $('.custom-table table').html(data); // 更新表格內容
                    },
                    error: function () {
                        alert('無法加載已回覆郵件，請稍後再試。');
                    }
                });
                // 切換按鈕顏色
                $('#showReplied').removeClass('btn-outline-secondary').addClass('btn-primary active');
                $('#showUnreplied').removeClass('btn-primary active').addClass('btn-outline-secondary');
            });
        });

        
    </script>
}